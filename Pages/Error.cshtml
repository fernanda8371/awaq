@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Página de Error</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body class="body-error">
    <div class="error-container">
        <h1 class="error-title">¡Error!</h1>
        <p class="error-message">Se produjo un error al procesar su solicitud. Tendrás que regresar a ingresar.</p>
        @if (Model.ShowRequestId)
        {
            <div class="request-id" style="text-align: center; margin-bottom: 20px;">
                <p>
                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                </p>
            </div>
        }
        <button class="home-button" onclick="window.location.href='Ingresar'">Regresa a Ingresar</button>
        <div class="logo-container">
            <img class="logo" src="images/awaq1.jpeg" alt="Logo de AWAQ">
        </div>
    </div>
</body>
</html>