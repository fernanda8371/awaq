<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio de Sesión</title>
</head>
<body class="ingresar">
    <div class="container-login">
        <div class="left-panel">
            <h3>¡Bienvenido!</h3><br>
            <h2>Ingresar</h2>
        </div>


        <div class="main-logging">
            <div class="login-box mt-5">
                <div class="logo-container">
                    <img src="~/images/awaq1.jpeg" width="100"><br>
                </div>
                @if (!ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @foreach (var error in ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
                <form method="post">

                    <div class="login-form m">

                        <label asp-for="Email" class="form-label">Correo Electrónico</label>
                        <input asp-for="Email" type="email" placeholder="Ingresa tu correo electrónico" required>

                        <label asp-for="Password" class="form-label">Contraseña</label>

                        <input asp-for="Password" type="password" placeholder="Ingresa tu contraseña" required>

                        <br /><br />
                        <button type="submit">Ingresar</button>
                    </div>


                </form>
                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }


            </div>
        </div>

    </div>

</body>
