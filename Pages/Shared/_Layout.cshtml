<!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ecoQuest</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/ecoQuest1.styles.css" asp-append-version="true" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    </head>
    <body>
        <header>
            @if (ViewData["ShowNavbar"] as bool? ?? true) // Muestra la barra si no se especifica lo contrario
            {
                <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">

                        <div class="collapse navbar-collapse order-0">
                            <ul class="navbar-nav me-auto">
                                @if (ViewData["ShowIngresarink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewData["ShowIngresarink"] as bool? == true && ViewContext.RouteData.Values["Page"].ToString().Equals("/Ingresar") ? "active" : "")" asp-area="" asp-page="/Ingresar">Ingresar</a>
                                    </li>
                                }

                                @if (ViewData["ShowDashboardLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Page"].ToString() == "/Dashboard" ? "active" : "")" asp-area="" asp-page="/Dashboard">Dashboard</a>
                                    </li>
                                }

                                @if (ViewData["ShowDashboard-AdminLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewContext.RouteData.Values["Page"].ToString() == "/Dashboard_Admin" ? "active" : "")" asp-area="" asp-page="/Dashboard_Admin">Dashboard Administrador</a>
                                    </li>
                                }

                                @if (ViewData["ShowAddLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewData["ShowAddLink"] as bool? == true && ViewContext.RouteData.Values["Page"].ToString().Equals("/Agregar") ? "active" : "")" asp-area="" asp-page="/Agregar">Agregar Colaborador</a>
                                    </li>
                                }
                                @if (ViewData["ShowEditLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewData["ShowEditLink"] as bool? == true && ViewContext.RouteData.Values["Page"].ToString().Equals("/Editar") ? "active" : "")" asp-area="" asp-page="/Editar">Editar Perfil</a>
                                    </li>
                                }
                                @if (ViewData["ShowClasificacionLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewData["ShowClasificacionLink"] as bool? == true && ViewContext.RouteData.Values["Page"].ToString().Equals("/Clasificacion") ? "active" : "")" asp-area="" asp-page="/Clasificacion">Clasificación</a>
                                    </li>
                                }
                                @if (ViewData["ShowGuideLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewData["ShowGuideLink"] as bool? == true && ViewContext.RouteData.Values["Page"].ToString().Equals("/Guia_de_estudio") ? "active" : "")" asp-area="" asp-page="/Guia_de_estudio">Guía de Estudio</a>
                                    </li>
                                }
                                @if (ViewData["ShowInstructionLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark @(ViewData["ShowInstructionLink"] as bool? == true && ViewContext.RouteData.Values["Page"].ToString().Equals("/Instrucciones") ? "active" : "")" asp-area="" asp-page="/Instrucciones">Instrucciones del juego</a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <div class="navbar-brand mx-auto order-1">
                            <a asp-area="" asp-page=""><img src="~/images/awaq1.jpeg" class="img-logo-nav" /></a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                                <span class="navbar-toggler-icon"></span>
                            </button>
                        </div>

    <div class="collapse navbar-collapse order-2">
                            <ul class="navbar-nav ms-auto">
                                @if (ViewData["ShowExitLink"] as bool? ?? false)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-page="/Ingresar">Salir</a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </nav>
            }
        </header>

        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>

        @await RenderSectionAsync("Scripts", required: false)
    </body>
    </html>
